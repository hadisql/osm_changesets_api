{
  "scripts": {
    "dokku": {
      "predeploy": "curl -sLO https://github.com/tailwindlabs/tailwindcss/releases/latest/download/tailwindcss-linux-x64 && chmod +x tailwindcss-linux-x64 && mv tailwindcss-linux-x64 /usr/local/bin/tailwindcss && /usr/local/bin/tailwindcss -i /app/static/input.css -o /app/static/output.css --minify",
